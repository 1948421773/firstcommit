<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/register_code_error">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_purchaselist_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_evaluate_product"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/im_evaluate_img">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:layout_marginTop="8dp"
                        android:text="描述相符"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="14dp" />
                    <RatingBar
                        android:id="@+id/rb_evaluate"
                        style="@style/roomRatingBar"
                        android:visibility="gone"
                        android:layout_toRightOf="@id/tv_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:numStars="5"
                        android:isIndicator="false"
                        android:stepSize="1.0"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <ImageView
                android:id="@id/im_evaluate_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="6dp"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_purchaselist_item_title"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:visibility="visible"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <RadioButton
                android:id="@+id/rb_satisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="好评"
                android:textSize="8dp"
                style="@style/gotoevaluate_selector_good"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/rb_commonly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中评"
                android:textSize="8dp"
                style="@style/gotoevaluate_selector_medium"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/rb_dissatisfied"
                style="@style/gotoevaluate_selector_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="差评"
                android:textSize="8dp" />
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/register_code_error"
        android:layout_marginTop="1dp"
        android:layout_below="@id/rl_grade">
        <RelativeLayout
            android:id="@+id/ll_evaluate_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/tv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left"
                android:imeOptions=""
                android:hint="请输入对商品的评价"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv_evaluate_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="0/120"
                android:textStyle="bold"
                android:textColor="@color/prodetail_freight"
                android:textSize="14sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_evaluate_image"
            android:layout_below="@id/ll_evaluate_edit"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/im_adding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="8dp"
                android:background="@drawable/order_evaluate_add_img"
                android:text="添加图片"
                android:drawableTop="@mipmap/gotoevaluate_upload"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_evaluate_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:dividerHeight="2px"
                android:layout_marginLeft="12dp"
                android:listSelector="#00000000"
                android:background="@color/white"
                android:scrollbars="none" >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payfor_applicants"
            android:layout_below="@id/ll_evaluate_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/register_code_error"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/home_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="店铺评分"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="18dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_evaluate_shop_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="描述相符"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="18dp" />
                <RatingBar
                    android:id="@+id/rb_evaluate_shop_describe"
                    style="@style/roomRatingBar"
                    android:layout_toRightOf="@id/tv_evaluate_shop_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:numStars="5"
                    android:isIndicator="false"
                    android:stepSize="1.0"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_evaluate_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="物流服务"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="18dp" />
                <RatingBar
                    android:id="@+id/rb_logistics_service"
                    style="@style/roomRatingBar"
                    android:layout_toRightOf="@id/tv_evaluate_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:numStars="5"
                    android:isIndicator="false"
                    android:stepSize="1.0"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_evaluate_shop_service"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="服务态度"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="18dp" />
                <RatingBar
                    android:id="@+id/rb_service_attitude"
                    style="@style/roomRatingBar"
                    android:layout_toRightOf="@id/tv_evaluate_shop_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:numStars="5"
                    android:isIndicator="false"
                    android:stepSize="1.0"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
