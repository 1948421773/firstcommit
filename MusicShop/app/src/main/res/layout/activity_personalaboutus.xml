<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shoppingcart_line">
    <include
        android:id="@+id/topbar_white"
        layout="@layout/topbar_white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_white"
        android:background="@color/white"
        >
        <RelativeLayout
            android:background="@color/shoppingcart_line"
            android:id="@+id/rl_icon"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_launcher"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_service_agreement"
            android:layout_below="@id/rl_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_service_agreement"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/white_click_wave_bg"
                android:text="服务协议"
                android:ellipsize="end"
                android:textSize="18dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:maxLength="20"
                android:paddingLeft="30dp"
                android:paddingRight="60dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/home_more_icon"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_service_agreement"
                android:background="@color/shoppingcart_unaccount"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_copyright_notice"
            android:layout_below="@id/rl_service_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_copyright_notice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/white_click_wave_bg"
                android:text="版权声明"
                android:ellipsize="end"
                android:textSize="18dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:maxLength="20"
                android:paddingLeft="30dp"
                android:paddingRight="60dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/home_more_icon"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_copyright_notice"
                android:background="@color/shoppingcart_unaccount"/>
        </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/rl_copyright_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/white_click_wave_bg"
                    android:text="版本更新"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>
                <TextView
                    android:id="@+id/tv_version_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="2.0.1"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_update"
                    android:background="@color/shoppingcart_unaccount"/>
            </RelativeLayout>



    </RelativeLayout>
</RelativeLayout>
