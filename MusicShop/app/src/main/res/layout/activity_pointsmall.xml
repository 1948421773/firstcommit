<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/topbar_white"
        layout="@layout/topbar_red"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/topbar_white"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/view_line"
        >
        <LinearLayout
            android:id="@+id/ll_pointsmall_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:text="9600"
                        />
                    <TextView
                        android:id="@+id/tv_points_text"
                        android:layout_below="@id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:text="剩余积分"
                        />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/ll_exchange_point"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_points_text"
                    android:background="@drawable/exchange_point"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_exchange"
                        android:textSize="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawablePadding="6dp"
                        android:textColor="@color/white"
                        android:drawableLeft="@mipmap/exchange_point"
                        android:layout_centerHorizontal="true"
                        android:text="兑换礼品"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_recording"
                android:layout_below="@id/rl_account_association"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/tv_recording"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="积分记录"
                    android:drawableLeft="@mipmap/recording_point"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:drawablePadding="6dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/home_more_icon"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_recording"
                    android:background="@color/shoppingcart_unaccount"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_about_points"
                android:layout_below="@id/rl_account_association"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/tv_about_points"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="关于积分"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:drawablePadding="6dp"
                    android:drawableLeft="@mipmap/about_points"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/home_more_icon"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/tv_about_points"
                    android:background="@color/shoppingcart_unaccount"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
