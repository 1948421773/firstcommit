<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rv_product_buttom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:id="@+id/ll_back"
                        android:layout_width="match_parent"
                        android:layout_weight="12"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_qrcode"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/back"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2"
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="horizontal">
                            <!-- 商品、详情、评价切换的控件 -->
                            <com.gxz.PagerSlidingTabStrip
                                android:layout_weight="8"
                                android:id="@+id/psts_tabs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textColor="@color/home_grid_item_title_color"
                                android:textSize="16sp"
                                app:pstsDividerColor="@android:color/transparent"
                                app:pstsDividerPaddingTopBottom="0dp"
                                app:pstsIndicatorColor="@color/colorPrimary"
                                app:pstsIndicatorHeight="1dp"
                                app:pstsScaleZoomMax="0.0"
                                app:pstsShouldExpand="true"
                                app:pstsSmoothScrollWhenClickTab="false"
                                app:pstsTabPaddingLeftRight="20dp"
                                app:pstsTextAllCaps="false"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                app:pstsTextSelectedColor="@color/colorPrimary"
                                app:pstsUnderlineHeight="0dp" />

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="图文详情"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="8"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/rl_detail_cart"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/iv_detail_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@mipmap/prodetail_cart"
                            android:gravity="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_count_cart_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_menu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/im_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/prodetail_setting"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/register_code_error"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <com.musicdo.musicshop.view.NoScrollViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@id/rv_product_buttom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/home_top_reflash_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_shop_Customer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textSize="10dp"
                        android:drawableTop="@mipmap/prodetail_customer_service_icon"
                        android:text="@string/productdetail_customer_service"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/home_top_reflash_bg"/>

                    <TextView
                        android:id="@+id/tv_shop_attention"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/prodetail_shop"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textSize="10dp"
                        android:text="@string/productdetail_shop" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/home_top_reflash_bg"/>
                    <TextView
                        android:id="@+id/tv_collect_prod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/prod_keep"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textSize="10dp"
                        android:text="@string/productdetail_keep" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_weight="1">
                        <CheckBox
                            android:id="@+id/cb_collect_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:checked="false"
                            android:button="@drawable/prod_keep"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:visibility="visible"
                            />
                        <TextView
                            android:id="@+id/tv_collect_shop"
                            android:layout_below="@id/cb_collect_shop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:text="@string/productdetail_keep" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/prodetail_add_shoppingcart_bg">
                        <TextView
                            android:id="@+id/iv_isscore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:background="@mipmap/proddetail_cart_count_bg" />
                        <TextView
                            android:id="@+id/tv_add_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@string/productdetail_addcart_text"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_submitorder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@color/prodetail_buynow_bg"
                        android:text="@string/productdetail_buynow_text"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/masking"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@android:color/transparent"></LinearLayout>
</RelativeLayout>
