<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shoppingcart_list_item_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/prodetail_shop"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawablePadding="3dp"
            android:layout_toRightOf="@id/determine_chekbox"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:text="第八号当铺"
            android:textColor="@color/main_tab_text_click"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shoppingcart_list_item_bg"
        android:orientation="horizontal" >



        <ImageView
            android:id="@+id/iv_adapter_list_pic"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_intro"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/ll_choose_parameter"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tv_intro"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_choose_parameter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left|center_vertical"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/prodetail_freight"
                        android:textSize="12dp" />


                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="¥ 308.00"
                    android:visibility="visible"
                    android:textColor="@color/shoppingcart_account"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:text="X1"
                    android:textColor="@color/prodetail_freight"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_reduce_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_count"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@color/register_code_error"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/prodetail_freight"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="52dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="2px"
                        android:layout_marginRight="2px"
                        android:background="@color/home_top_reflash_bg"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/prodetail_freight"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@color/register_code_error"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/prodetail_freight"
                        android:textSize="22dp" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_shop_seal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shoppingcart_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:id="@+id/ll_pay_distribution"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="支付配送"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="在线支付"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="快递"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/home_more_icon"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shoppingcart_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="邮费"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="卖家包邮"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shoppingcart_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rl_invoice"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="发票"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="明细(电子)个人"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:drawableRight="@mipmap/home_more_icon"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shoppingcart_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="卖家留言:"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:id="@+id/tv_message_title" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_message_title"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="输入对本次交易的说明"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shoppingcart_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="共"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_child_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="件商品"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="合计:"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="¥"
                    android:gravity="center"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_child_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0.00"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>