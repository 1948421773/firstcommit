<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_grid_item_img"
        android:layout_margin="6dp"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_popularity_icon"
            android:scaleType="fitXY"
            android:layout_gravity="left"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_popularity_icon"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_searchprod_item_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:textColor="@color/home_grid_item_title_color"
                android:textSize="@dimen/home_grid_item_title_size"
                android:layout_centerHorizontal="true"
                android:text="@string/home_grid_item_title"
                android:lines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_choose_parameter"
                android:layout_width="match_parent"
                android:layout_below="@id/tv_searchprod_item_title"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:ellipsize="end"
                android:textColor="@color/prodetail_freight"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_choose_parameter"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_popularity_salenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销5850"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"
                    android:textColor="@color/prodetail_freight"/>
                <TextView
                    android:id="@+id/tv_similar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:padding="4dp"
                    android:visibility="visible"
                    android:text="2017/11/29 00:00:00"
                    android:layout_marginRight="11dp"
                    android:layout_alignBaseline="@+id/tv_popularity_salenumber"
                    android:layout_alignBottom="@+id/tv_popularity_salenumber"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_grid_item_frame"
        android:layout_below="@id/rl_grid_item_img"
        />
</LinearLayout>
