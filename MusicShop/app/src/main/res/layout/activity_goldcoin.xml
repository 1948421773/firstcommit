<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/topbar_white"
        layout="@layout/topbar_white"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/topbar_white"
        android:background="@color/shoppingcart_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_line"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="获取金币的方法?"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="一、通过积分兑换金币100积分=1金币"
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="二、通过微信进入乐都城公众号进行金币充值"
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="金币的使用方法?"
                    android:ellipsize="end"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="1.金币可抵扣订单部分现金"
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/buttom_white_bg"
                    android:text="2............."
                    android:ellipsize="end"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:paddingLeft="30dp"
                    android:paddingRight="60dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
