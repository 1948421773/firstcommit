<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >
    <RelativeLayout
        android:id="@+id/rl_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_grid_item_img"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:id="@+id/iv_shopcollect_icon"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_shopcollect_icon"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shopcollect_name"
                    android:layout_width="wrap_content"
                    android:textColor="@color/home_grid_item_title_color"
                    android:textSize="@dimen/home_grid_item_title_size"
                    android:layout_centerHorizontal="true"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/tv_shopcollect_num"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_below="@id/tv_shopcollect_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/home_grid_item_price_size"
                    android:textColor="@color/home_grid_item_title_color"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/im_security_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/home_more_icon"
                        />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_grid_item_frame"
        android:layout_below="@id/rl_search_item"
        />
</RelativeLayout>
