<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/homesecond_listitem_bg"
    >

    <!--<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/homeitem_icon"
    android:scaleType="fitXY"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/rl_homesecond_item">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scaleType="center"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="2sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/homeitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="2sp"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_grid_item_title"
        android:layout_below="@id/rl_homesecond_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingTop="2dp"
        android:paddingLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/home_grid_item_title_color"
        android:textSize="@dimen/home_grid_item_title_size"
        android:layout_centerVertical="true"
        android:text="@string/home_grid_item_title"
        android:lines="2"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/tv_home_grid_item_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/tv_home_grid_item_title"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/home_grid_item_price_size"
        android:layout_marginBottom="6dp"
        android:textColor="@color/home_grid_item_price_tc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tv_decimal"
        android:text=".00"
        android:layout_below="@id/tv_home_grid_item_title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_home_grid_item_price"
        android:layout_centerVertical="true"
        android:textSize="@dimen/order_unpaid_shopname"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:textColor="@color/home_grid_item_price_tc"/>
    <ImageView
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:layout_below="@id/tv_home_grid_item_title"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/home_grid_item_cart"/>
</RelativeLayout>
