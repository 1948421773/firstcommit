<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:id="@+id/rl_brand_gruop"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/im_title_line"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:background="@color/home_musicalinstrument_color"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/home_musical_instrument"
            android:textColor="@color/home_musicalinstrument_color"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_toLeftOf="@+id/im_arrow"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_homesecond_more"
            android:text="@string/home_more"
            android:textColor="@color/home_popularity_text_color"/>
        <ImageView
            android:id="@id/im_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@mipmap/home_more_icon"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_searchprod_overall"
        android:layout_below="@id/rl_brand_gruop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />
    <ImageView
        android:layout_below="@id/rc_searchprod_overall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/im_AdInfo1"
        android:visibility="gone"
        android:scaleType="center"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_below="@id/rc_searchprod_overall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_AdInfo1"
        android:orientation="vertical">
    </LinearLayout>
</RelativeLayout>
