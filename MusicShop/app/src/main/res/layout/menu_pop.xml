<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/im_pop_menu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9sp"
            android:src="@mipmap/pop_menu_arrow"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_below="@id/im_pop_menu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:padding="2dp"
            android:background="@drawable/pop_menu_bg"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="88sp"
                android:layout_height="28sp"
                android:id="@+id/menu1"
                android:layout_margin="2sp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/im_menu_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/menu_message"/>
                <TextView
                    android:id="@+id/tv_menu_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/im_menu_message"
                    android:text="消息"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"

                    android:textSize="14sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_popularity_text_color"/>
            <RelativeLayout
                android:layout_width="88sp"
                android:layout_height="28sp"
                android:layout_margin="2sp"
                android:id="@+id/menu2"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/im_menu_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/menu_homepage"/>
                <TextView
                    android:id="@+id/tv_menu_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/im_menu_homepage"
                    android:text="主页"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:drawablePadding="2sp"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_popularity_text_color"/>
            <RelativeLayout
                android:layout_width="88sp"
                android:layout_height="28sp"
                android:layout_margin="2sp"
                android:id="@+id/menu3"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/im_menu_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/im_menu_persnal"/>
                <TextView
                    android:id="@+id/tv_menu_customer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/im_menu_customer"
                    android:text="客服"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:drawablePadding="2sp"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_popularity_text_color"/>
            <RelativeLayout
                android:layout_width="88sp"
                android:layout_height="28sp"
                android:layout_margin="2sp"
                android:id="@+id/menu4"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/im_menu_persnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/im_menu_customer"/>
                <TextView
                    android:id="@+id/tv_menu_persnal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/im_menu_persnal"
                    android:text="个人中心"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:drawablePadding="2sp"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

