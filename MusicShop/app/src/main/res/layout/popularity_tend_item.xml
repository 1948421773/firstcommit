<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/home_grid_item_frame"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:id="@+id/rl_grid_item_img"
            android:background="@color/white">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="378dp"
                android:layout_height="378dp"
                android:id="@+id/iv_popularity_icon"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tv_popularity_item_title"
                android:layout_below="@id/iv_popularity_icon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textColor="@color/home_grid_item_title_color"
                android:textSize="@dimen/home_grid_item_title_size"
                android:layout_centerHorizontal="true"
                android:text="@string/home_grid_item_title"
                android:lines="2"
                android:ellipsize="end"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_popularity_item_title"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_popularity_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_grid_item_price"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/home_grid_item_price_size"
                        android:textColor="@color/home_grid_item_price_tc"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/home_grid_item_price_size"
                        android:text="268人已买"
                        android:textColor="@color/prodetail_freight"
                        android:layout_marginRight="11dp"
                        android:layout_alignBaseline="@+id/tv_popularity_price"
                        android:layout_alignBottom="@+id/tv_popularity_price"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
