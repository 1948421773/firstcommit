<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/shoppingcart_list_item_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_purchaselist_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/sd_purchase_img">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:id="@+id/ll_choose_parameter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_intro"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tv_choose_parameter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:textColor="@color/prodetail_freight"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            android:text="¥ 308.00"
                            android:textColor="@color/shoppingcart_account"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="X1"
                            android:textColor="@color/prodetail_freight"
                            android:textSize="12dp" />


                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@id/sd_purchase_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_allorder_total_info">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:text="共"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_order_unpaid_num"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:text="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:text="件商品"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:text="合计:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_shopname"
                        android:text="@string/rmb"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/order_unpaid_prod_total_price"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_shopname"
                        android:text="5999.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:layout_marginLeft="5dp"
                        android:text="(含运费¥"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:text="0.00"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/prodetail_prod_title"
                        android:textSize="@dimen/order_unpaid_prod_num"
                        android:layout_marginRight="5dp"
                        android:text=")"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_top_reflash_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="6dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_unpaid"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_payfor"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/order_unpaid_replace"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_cancel_order"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/order_unpaid_cancel"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_payment"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="@string/order_unpaid_topay"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_remind_delivery"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:text="提醒发货"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/prodetail_into_shop"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/main_tab_text_click"
                        android:textSize="@dimen/order_unpaid_state" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_unReceipt"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_longtime_deliver"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="延长收货"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_applyfor_refund"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="申请退款"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_tracking_Logistics"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@mipmap/prodetail_into_shop"
                            android:gravity="center"
                            android:text="查看物流"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />

                        <TextView
                            android:id="@+id/tv_confirm_receipt"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="确认收货"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_unEvaluation"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_goto_evaluate"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="我要评价"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_additional_comments"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="追加评价"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_delete_order"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:text="删除订单"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/prodetail_into_shop"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state" />
                        <TextView
                            android:id="@+id/tv_tracking_Logistics_tow"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@mipmap/prodetail_into_shop"
                            android:gravity="center"
                            android:text="查看物流"
                            android:textColor="@color/main_tab_text_click"
                            android:textSize="@dimen/order_unpaid_state"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>