<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">
    <com.musicdo.musicshop.view.CusPtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/rl_top"
        android:id="@+id/grid_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2px"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        >
    <!--<com.musicdo.musicshop.view.JdRefreshLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/test_recycler_view_frame"
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_top_reflash_bg"
        cube_ptr:ptr_duration_to_close="100"
        cube_ptr:ptr_duration_to_close_header="500"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="2" >
</com.musicdo.musicshop.view.JdRefreshLayout>-->
    <!-- android.support.v4.widget.NestedScrollView 可换scrollview -->
    <com.musicdo.musicshop.view.PersonalScrollView
        android:id="@+id/sv_home_layout"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:background="@color/colorAccent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/im_persinal_icon"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/im_persinal_tx_arrow"
                        fresco:actualImageScaleType="fitCenter"
                        fresco:roundAsCircle="true"
                        fresco:roundingBorderColor="@color/white"
                        fresco:roundingBorderWidth="1dp" />
                    <LinearLayout
                        android:id="@+id/ll_persinal_center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_persinal_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="登录/注册"
                                android:gravity="center"
                                android:lines="1"
                                android:drawableRight="@mipmap/putong"
                                android:drawablePadding="4dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/tv_persinal_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="center"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:src="@mipmap/putong" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@mipmap/iaw" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="我的订单"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_allorder"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="全部订单"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/prodetail_freight"
                    android:textSize="12dp"
                    android:drawableRight="@mipmap/prodetail_prod_type" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_top_reflash_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_personal_unpaid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_margin="6dp"
                            android:gravity="center"
                            android:drawableTop="@mipmap/personal_unpaid"
                            android:text="@string/personal_unpaid"/>

                        <TextView
                            android:id="@+id/tv_personal_unpaid_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_personal_nodelivery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@mipmap/personal_nodelivery"
                            android:text="@string/personal_nodelivery"/>
s
                        <TextView
                            android:id="@+id/tv_personal_nodelivery_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_personal_personal_noreceipt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@mipmap/personal_noreceipt"
                            android:text="@string/personal_noreceipt"/>

                        <TextView
                            android:id="@+id/tv_personal_personal_noreceipt_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_personal_personal_noevaluation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@mipmap/personal_noevaluation"
                            android:text="@string/personal_noevaluation"/>

                        <TextView
                            android:id="@+id/tv_personal_personal_noevaluation_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_personal_returned"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawableTop="@mipmap/personal_returned"
                            android:text="@string/personal_returned"/>

                        <TextView
                            android:id="@+id/tv_personal_returned_tips"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="16dp"
                            android:layout_alignParentRight="true"
                            android:textSize="8sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:background="@mipmap/proddetail_cart_count_bg" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="@color/home_top_reflash_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_tools"
                    android:layout_centerVertical="true"
                    android:textColor="@color/prodetail_prod_title"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_alltools"
                    android:gravity="center"
                    android:id="@+id/tv_all_tools"
                    android:textColor="@color/prodetail_freight"
                    android:textSize="12dp"
                    android:drawablePadding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@mipmap/prodetail_prod_type"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@id/textView"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_home_function_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="none"
                android:background="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:id="@+id/tv_personal_recommend"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/personal_recommend"
                android:visibility="gone"
                android:textColor="@color/prodetail_freight"
                android:background="@color/home_top_reflash_bg"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_grid_education"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </com.musicdo.musicshop.view.PersonalScrollView >
    </com.musicdo.musicshop.view.CusPtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/rl_personal_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_psrsonal_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/personal_setting_icon"/>
            </LinearLayout>
            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_personal_title"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/main_personalcenter"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/home_message_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>