<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <include
        android:id="@+id/topbar_white_towbutton"
        layout="@layout/topbar_white_towbutton"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/myProgressBar"
        android:layout_below="@id/topbar_white_towbutton"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:progressDrawable="@drawable/progressdrawable"
        android:layout_height="1dp"

        />
    <WebView
        android:id="@+id/myWebView"
        android:visibility="gone"
        android:layout_below="@id/myProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/view"
        android:layout_below="@id/topbar_white_towbutton"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_code_error"/>
    <FrameLayout
        android:id="@+id/webView1"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent" >
    </FrameLayout>
</RelativeLayout>