<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_code_error"
    >
    <include
        android:id="@+id/topbar_white"
        layout="@layout/topbar_white"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topbar_white"
        android:background="@color/shoppingcart_unaccount"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/view">
        <LinearLayout
            android:layout_marginTop="25dp"
            android:id="@+id/ll_success_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:background="@mipmap/payment_check"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="订单提交成功"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tips"
            android:layout_below="@id/ll_success_info"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请在"
                android:textColor="@color/prodetail_freight"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="24小时内"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="完成支付  超时自动取消订单"
                android:textColor="@color/prodetail_freight"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <View
            android:id="@+id/view_info"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/ll_tips"
            android:layout_marginTop="20dp"
            android:background="@color/shoppingcart_unaccount"/>
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_below="@id/view_info"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="支付金额:"
                android:textColor="@color/prodetail_freight"
                android:textSize="22sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="¥"
                android:layout_marginRight="6dp"
                android:textColor="@color/payment_price"
                android:textSize="28sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="--.--"
                android:textColor="@color/payment_price"
                android:textSize="28sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>
        <View
            android:id="@+id/view_price"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@id/ll_price"
            android:layout_marginTop="20dp"
            android:background="@color/home_top_reflash_bg"/>
        <RelativeLayout
            android:id="@+id/rl_payment_way"
            android:layout_width="match_parent"
            android:layout_below="@id/view_price"
            android:layout_height="45dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="支付方式"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:id="@+id/tv_way" />

        </RelativeLayout>
        <View
            android:id="@+id/view_way"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_payment_way"
            android:background="@color/shoppingcart_unaccount"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/view_way"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="微信支付"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/payment_wx"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:id="@+id/tv_score" />
            <RelativeLayout
                android:id="@+id/rl_ck_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/ck_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:background="@mipmap/payment_ok"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view_zfb"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_wx"
            android:background="@color/shoppingcart_unaccount"/>
        <RelativeLayout
            android:id="@+id/rl_zfb"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/view_zfb"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="支付宝支付"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/payment_zfb"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:id="@+id/tv_zfb" />
            <RelativeLayout
                android:id="@+id/rl_ck_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >
            <TextView
                android:id="@+id/ck_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@mipmap/payment_uncheck"
                />
</RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/view_yl"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_zfb"
            android:background="@color/shoppingcart_unaccount"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible"
            android:layout_below="@id/view_yl"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="银联支付"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/payment_yl"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:id="@+id/tv_yl" />
            <RelativeLayout
                android:id="@+id/rl_ck_yl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/ck_yl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:background="@mipmap/payment_uncheck"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_address_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_login_click"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>
