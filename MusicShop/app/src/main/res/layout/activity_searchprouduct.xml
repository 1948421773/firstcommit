<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="12"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv_qrcode"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@mipmap/back"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:paddingLeft="8dp"
                            android:background="@drawable/search_edittext_bg"
                            >
                            <EditText
                                android:layout_weight="2"
                                android:id="@+id/et_search"
                                android:focusable="false"
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:padding="5dp"
                                android:lines="1"
                                android:imeOptions="actionSearch"
                                android:singleLine="true"
                                android:gravity="center_vertical|left"
                                android:maxLength="15"
                                android:textSize="12dp"
                                android:drawablePadding="6dp"
                                android:background="@drawable/search_edittext_bg"
                                android:drawableLeft="@mipmap/home_search_icon"
                                android:layout_height="wrap_content" />
                            <Button
                                android:id="@+id/bt_username_clear"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:background="@mipmap/login_cancel"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_weight="8"
                        android:layout_gravity="center"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cb_searchprod_chekbox"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:button="@null"
                                android:layout_centerInParent="true"
                                android:background="@drawable/searchprod_change_show"
                                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:visibility="visible" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_menu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:id="@+id/im_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/prodetail_setting"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl_top"
                android:layout_marginBottom="2px"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rg_searchtab"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_searchprod_overall"
                            android:checked="true"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@drawable/radiobutton_check_change_textcolor"
                            android:text="@string/searchprod_overall" />

                        <RadioButton
                            android:id="@+id/rb_searchprod_sales"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:drawablePadding="-25dp"
                            android:paddingRight="25dp"
                            android:button="@null"
                            android:textColor="@drawable/radiobutton_check_change_textcolor"
                            android:text="@string/searchprod_sales" />
                        <ImageView
                            android:id="@+id/iv_sales_state"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="-40dp"
                            android:layout_marginRight="40dp"
                            />
                        <RadioButton
                            android:id="@+id/rb_searchprod_price"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:button="@null"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:drawablePadding="-25dp"
                            android:paddingRight="25dp"
                            android:gravity="center"
                            android:textColor="@drawable/radiobutton_check_change_textcolor"
                            android:text="@string/searchprod_price" />
                        <ImageView
                            android:id="@+id/iv_price_state"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="-40dp"
                            android:layout_marginRight="40dp"
                            />
                        <ImageView
                            android:id="@+id/iv_line"
                            android:layout_width="1px"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:background="@color/home_popularity_text_color"
                            android:visibility="visible" />

                    </RadioGroup>
                    <TextView
                        android:id="@+id/tv_searchprod_screen"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:textColor="@drawable/radiobutton_check_change_textcolor"
                        android:text="@string/searchprod_screen" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/register_code_error"/>
                <FrameLayout
                    android:id="@+id/id_fragment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_searchprod_overall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="2dp"

                    />
                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="没有相关的产品"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150pt"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_gravity="right"
            android:background="#fff"
            >
            <com.musicdo.musicshop.view.PersonalScrollView
                android:id="@+id/sv_home_layout"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格区间"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/text_black"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp">

                        <EditText
                            android:id="@+id/ed_low_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="最低价"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:numeric="integer"
                            android:singleLine="true"
                            android:padding="3dp"
                            android:maxLength="9"
                            android:textSize="12sp"
                            android:background="@drawable/buttom_saixuan_item_unclick"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ㅡ"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            />
                        <EditText
                            android:id="@+id/ed_height_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="最高价"
                            android:layout_weight="1"
                            android:numeric="integer"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLength="9"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:padding="3dp"
                            android:textSize="12sp"
                            android:background="@drawable/buttom_saixuan_item_unclick"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/tv_nickname_view"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/tv_accountsecurity_password"
                        android:background="@color/register_code_error"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_brand_title">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_shop_newprod"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:text="品牌"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_black"
                            android:background="@color/white"/>
                        <CheckBox
                            android:id="@+id/cb_brand_choose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20dp"
                            android:checked="false"
                            android:text="全部"
                            android:textSize="15dp"
                            android:textColor="@color/prodetail_freight"
                            android:layout_centerVertical="true"
                            android:button="@null"
                            android:drawableRight="@drawable/saixuan_arrow_check_bg"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:visibility="visible"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_grid_education"
                        android:layout_below="@id/tv_shop_newprod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_kind_title">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="15dp"
                        android:id="@+id/tv_shop_hotsell"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:text="种类"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_black"
                        android:background="@color/white"
                        android:layout_alignParentStart="true" />
                    <CheckBox
                        android:id="@+id/cb_kind_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:checked="false"
                        android:text="全部"
                        android:textSize="15dp"
                        android:textColor="@color/prodetail_freight"
                        android:layout_centerVertical="true"
                        android:button="@null"
                        android:drawableRight="@drawable/saixuan_arrow_check_bg"
                        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:visibility="visible"
                        android:layout_alignParentRight="true" />
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_shop_hotsell"
                        android:layout_below="@id/tv_shop_hotsell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>
            </com.musicdo.musicshop.view.PersonalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_reset"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="重置"
                    android:textColor="@color/text_black"
                    android:background="@color/white"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:id="@+id/tv_submit"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:background="@color/saixuan_click"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>