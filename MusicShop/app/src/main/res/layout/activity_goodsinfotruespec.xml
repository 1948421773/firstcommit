<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_heightPercent="100%sh"
    app:layout_widthPercent="100%sh"
    android:background="@android:color/transparent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="80%sh"
        app:layout_widthPercent="100%sh"
        android:background="@color/white">

        <TextView
            app:layout_marginTopPercent="2%sh"
            android:id="@+id/tv_truespec_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:layout_marginRight="10dp"
            android:text="产品参数"
            android:textColor="@color/main_tab_text_click"
            android:textSize="20dp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_truespec"
            android:layout_below="@id/tv_truespec_title"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="完成"
                android:textSize="16dp"
                android:textColor="@color/white" />
        </LinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>