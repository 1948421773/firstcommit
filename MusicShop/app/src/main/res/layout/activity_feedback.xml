<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_code_error">

    <include
        android:id="@+id/topbar_white"
        layout="@layout/topbar_white"/>

    <ScrollView
        android:id="@+id/sl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_above="@+id/rl_feedback_commit"
        android:layout_below="@id/topbar_white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_purchaselist_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/register_code_error"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_question_type"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="请选择反馈问题的类型"
                        android:ellipsize="end"
                        android:background="@color/home_top_reflash_bg"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:paddingRight="60dp"/>
                    <LinearLayout
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_question_type"
                        android:layout_below="@id/tv_question_type"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_question_unusual"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="功能异常"
                            android:background="@drawable/feebback_question_unclick_bg"
                            android:ellipsize="end"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            />
                        <TextView
                            android:id="@+id/tv_question_experience"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="35dp"
                            android:text="体验问题"
                            android:ellipsize="end"
                            android:textSize="12dp"
                            android:background="@drawable/feebback_question_unclick_bg"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            />
                        <TextView
                            android:id="@+id/tv_question_newfunction"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="新功能建议"
                            android:ellipsize="end"
                            android:textSize="12dp"
                            android:background="@drawable/feebback_question_unclick_bg"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            />
                        <TextView
                            android:id="@+id/tv_question_other"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:text="其他"
                            android:background="@drawable/feebback_question_unclick_bg"
                            android:ellipsize="end"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_question_feebback"
                        android:layout_below="@id/ll_question_type"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="问题与反馈"
                        android:background="@color/home_top_reflash_bg"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:paddingRight="60dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_purchaselist_item_title"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="不满意"
                            style="@style/gotoevaluate_selector_bad"
                            android:button="@null"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="一般"
                            style="@style/gotoevaluate_selector_medium"
                            android:button="@null"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="满意"
                            style="@style/gotoevaluate_selector_good"
                            android:button="@null"
                            />
                    </RadioGroup>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/register_code_error"
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/rl_grade">
                    <RelativeLayout
                        android:id="@+id/ll_evaluate_edit"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/white"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/tv_evaluate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="left"
                            android:imeOptions=""
                            android:hint="说说你的使用心得吧"
                            android:layout_margin="20dp"/>
                        <TextView
                            android:id="@+id/tv_evaluate_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="0/120"
                            android:textStyle="bold"
                            android:textColor="@color/prodetail_freight"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_question_photo"
                        android:layout_below="@id/ll_evaluate_edit"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/home_top_reflash_bg"
                        android:text="添加图片"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:paddingLeft="15dp"
                        android:paddingRight="60dp"/>
                    <LinearLayout
                        android:id="@+id/ll_evaluate_image"
                        android:layout_below="@id/tv_question_photo"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/im_adding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="10dp"
                            android:drawablePadding="8dp"
                            android:background="@drawable/order_evaluate_add_img"
                            android:text="添加图片"
                            android:drawableTop="@mipmap/gotoevaluate_upload"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_evaluate_photos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:choiceMode="singleChoice"
                            android:dividerHeight="2px"
                            android:layout_marginLeft="12dp"
                            android:listSelector="#00000000"
                            android:background="@color/white"
                            android:scrollbars="none" >
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:id="@+id/rl_feedback_commit"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_question_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提交"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:textSize="16dp"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttom_red_bg"
            />
    </RelativeLayout>
</RelativeLayout>
